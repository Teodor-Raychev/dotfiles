"" ~/.ideavimrc

" Set relative numbers:
set relativenumber number

"" General:
" ===========================================================
set scrolloff=10
set linenumber
set showmode
set showcmd
set smartcase
set incsearch
set hlsearch
set visualbell

" Use system clipboard
set clipboard+=unnamed

let mapleader = " "

"" Plugin Settings
"" ========================================================
set surround
set highlightedyank
set commentary
set NERDTree
set which-key
" Which-Key timeout
set notimeout
" set easymotion
" Easymotion settings
" set notimeout

" Which-key settings
let g:WhichKey_FontSize = 16
let g:WhichKey_CommandColor = "#41ead4"
let g:WhichKey_PrefixColor = "#f335b2"
let g:WhichKey_SortOrder = "by_key_prefix_first"

let g:WhichKeyDesc_leader = "<leader> Leader key"


"" Key mappings
"" ========================================================

inoremap jk <Esc>

" Show description for Diagnostics
nmap <leader>sd <Action>(ShowErrorDescription)
" nmap <leader><S-d> <Action>

" delete word backwords"
nmap dw vb"_d
" system yank
vmap <leader>y "+y
vmap <leader>d "+d
vmap <leader>P "+P
vmap <leader>p "+p

nmap <leader>P "+P
nmap <leader>p "+p
nmap <leader>y "+yy

" move up and down
nmap <C-d> <C-d>zz
nmap <C-u> <C-u>zz

" Tab navigation
nnoremap <CS-l> :tabnext<CR>
nnoremap <CS-h> :tabprev<CR>

" Pane navigation
" nnoremap <A-h> <C-w>h
" nnoremap <A-l> <C-w>l
" nnoremap <A-k> <C-w>k
" nnoremap <A-j> <C-w>j

" Jump between methods
nmap [[ <Action>(MethodUp)
nmap ]] <Action>(MethodDown)

" jumnp to end/start of functions
" nnoremap % :<CS-M>

" Easy visual indentation
" Shfit + > or < when in visual mode.
vnoremap < <gv
vnoremap > >gv

vnoremap <leader>r <Action>(Replace...)

" Execute macro saved in 'q' register
nnoremap qj @q

" Popup navigation
inoremap <C-j> <Action>(PopupMenu-selectNext)
inoremap <C-k> <Action>(PopupMenu-selectPrev)


"" Leader commands
"" ========================================================
map <leader>e <Action>(ProjectDirectory)

" Harpoon
" ====================
map <leader>w <Action>(ShowHarpoon)
map <leader>1 <Action>(GotoHarpoon1)
map <leader>2 <Action>(GotoHarpoon2)
map <leader>3 <Action>(GotoHarpoon3)
map <leader>4 <Action>(GotoHarpoon4)
map <leader>5 <Action>(GotoHarpoon5)
map <Tab>1 <Action>(SetHarpoon1)
map <Tab>2 <Action>(SetHarpoon2)
map <Tab>3 <Action>(SetHarpoon3)
map <Tab>4 <Action>(SetHarpoon4)
map <Tab>5 <Action>(SetHarpoon5)

" Comment lines
map <leader>c <Action>(CommentByLineComment)

" Jump around with easymotion
" map <leader>j <Plug>(easymotion-s)

" Highlight
map <leader>h "viw

" Folding
map <leader>zc :action CollapseAllRegions<CR>
map <leader>zo :action ExpandAllRegions<CR>

" Window splits
map <leader><S-\> <Action>(SplitVertically)
map <leader>- <Action>(SplitHorizontally)
map <leader>wu <Action>(Unsplit)
map <leader>wm <Action>(MoveEditorToOppositeTabGroup)

" Display options
map <leader>dd <action>(ToggleDistractionFreeMode)
map <leader>dz <action>(ToggleZenMode)
map <leader>df <action>(ToggleFullScreen)

" Actions
" Intention action like convert to string and such.
map <leader>am <action>(ShowIntentionActions)
map <leader>sg <action>(SearchEverywhere)

" File navigation
map <leader>sf <action>(GotoFile)
map <leader>fr <action>(RecentFiles)
map <leader>fc <action>(FindInPath)
map <leader><leader> <Action>(Switcher)
map <leader>fl <action>(RecentLocations)
map <leader>fs <action>(NewScratchFile)

" Close active tab
map <leader>q <action>(CloseContent)

" Refactoring
map <leader>rn <Action>(RenameElement)
map <leader>rm <Action>(ExtractMethod)
map <leader>rv <Action>(IntroduceVariable)
map <leader>rf <Action>(IntroduceField)
map <leader>rs <Action>(ChangeSignature)
map <leader>rr <Action>(Refactorings.QuickListPopupAction)

" Go to code
nmap <leader>gd <Action>(GotoDeclaration)
nmap <leader>gy <Action>(GotoTypeDeclaration)
nmap <leader>gi <Action>(GotoImplementation)
nmap <leader>gu <Action>(ShowUsages)
nmap <leader>gt <Action>(GotoTest)
nmap <leader>gf <Action>(Back)
nmap <leader>gb <Action>(Forward)

" Go to next change Git
nmap <leader>]h <Action>(NextChange)

" Git windows
map <leader>gc <Action>(CheckinProject)
map <leader>gs <Action>(ActivateVersionControlToolWindow)
map <leader>gb <Action>(Git.Branches)

